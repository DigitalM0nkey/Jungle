<h1>Login</h1>

<%= form_tag '/login' do  %> 
  <div class="form-group">
    <%= label :email, "Email:", class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= text_field_tag :email %>
    </div>
  </div>

  <div class="form-group">
    <%= label :password, "Password:", class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= password_field_tag :password %>
    </div>
  </div>
    <%= submit_tag "Submit", class: "btn btn-primary btn-lg btn-block" %> 
<% end %>